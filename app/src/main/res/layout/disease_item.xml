<?xml version="1.0" encoding="utf-8"?> <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abstrac1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_grid_disease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/b1_name"
        android:textColor="#000"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView_grid_disease"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/b1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_grid_disease"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/disease_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:padding="15dp"
        android:text="Hip dyplasia is a heritable condition in which the femur doesn't fit snugly into the pelvic socket of the hip joint. Hip dysplasia can exist with or without clinical signs. Some dogs exhibit pain and lameness on one or both rear legs. As the dog ages, arthritis can develop. X-ray screening for hip dysplasia is done by the Orthopedic Foundation for Animals or the University of Pennsylvania Hip Improvement Program. Dogs with hip dysplasia should not be bred. Ask the breeder for proof that the parents have been tested for hip dysplasia and found to be free of problems"
        android:textColor="#000"
        android:textSize="17sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_backtolist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="347dp"
        android:layout_marginBottom="667dp"
        app:srcCompat="@drawable/add"/>


</RelativeLayout>

